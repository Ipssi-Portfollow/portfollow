{% include 'layout/navbar.html.twig'%}

<br>
{% block body %}

<div class="profil">
    <div class="userInfo">
        <div class= "image">
            <img style = "height: 150px; width: 150px; border-radius:100px;" src="{{ asset('images/lion.jpg') }}">
        </div>
        <div class= "infos">
            <h1 class="pseudo">{{user.pseudo}}   <a class="btn btn-success" style="font-weight: bold; font-size: 16px; border-radius: 100px;" href="{{ path('NewPost') }}"><strong>+</strong></a>
</h1>
            <br>
            {{user.bio}}
        </div>
    </div>

    <div class="posts">
        {% for post in posts %}
        <div class = "post">
            {{ post.picts}}
            <br>
            <td><a class="btn btn-primary" href="/ShowPost/{{ post.id }}">Voir Plus</a></td>
        </div>  
        {% endfor %}
    </div>
</div>

  
{% endblock %}
