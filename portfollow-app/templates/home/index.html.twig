{% block body %}

{% include 'layout/navbar.html.twig'%}

<br>

<div class = "posts_home">
    {% for post in posts %}
        <div class="post_home">
            <div class = "post_header_home">
                <div class="prem_lign_head">
                    <p class="spec">{{ post.title }}</p>
                    <a class = "btn btn-primary" href="ShowPost/{{ post.id }}">Voir Plus</a>
                </div>
                <p>{{ post.localisation }}</p>
            </div>
            <div class = "post_image_home">
                    {{ post.picts }}
            </div>    
            <div class="post_footer_home">
                <div class="prem_lign_foot">
                    <a style ="margin-right: 15px;" href="user/{{ post.user.id() }}" >{{ post.user.pseudo}}</a>
                    {{ post.description }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
